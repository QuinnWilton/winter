{
  "lexicon": 1,
  "id": "diy.razorgirl.winter.secretMeta",
  "defs": {
    "main": {
      "type": "record",
      "description": "Metadata about available secrets (values stored locally, not in ATProto)",
      "key": "literal:self",
      "record": {
        "type": "object",
        "required": ["secrets", "createdAt"],
        "properties": {
          "secrets": {
            "type": "array",
            "description": "List of secret metadata entries",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Secret name (used in tool code as WINTER_SECRET_{name})",
                  "maxLength": 64
                },
                "description": {
                  "type": "string",
                  "description": "Human-readable description of what the secret is for",
                  "maxLength": 256
                }
              }
            }
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "When the secret metadata was created"
          },
          "lastUpdated": {
            "type": "string",
            "format": "datetime",
            "description": "When the secret metadata was last modified"
          }
        }
      }
    }
  }
}
