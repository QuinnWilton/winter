{
  "lexicon": 1,
  "id": "diy.razorgirl.winter.identity",
  "defs": {
    "main": {
      "type": "record",
      "description": "Core identity configuration for Winter. Singleton per repository (key: 'self'). Identity content is now stored as directives.",
      "key": "literal:self",
      "record": {
        "type": "object",
        "required": ["operatorDid", "createdAt", "lastUpdated"],
        "properties": {
          "operatorDid": {
            "type": "string",
            "format": "did",
            "description": "DID of the operator who controls this Winter instance"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "When this identity was created"
          },
          "lastUpdated": {
            "type": "string",
            "format": "datetime",
            "description": "When this identity was last updated"
          }
        }
      }
    }
  }
}
