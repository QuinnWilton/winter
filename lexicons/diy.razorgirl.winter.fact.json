{
  "lexicon": 1,
  "id": "diy.razorgirl.winter.fact",
  "defs": {
    "main": {
      "type": "record",
      "description": "Atomic fact record. Key is a TID.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["predicate", "args", "createdAt"],
        "properties": {
          "predicate": {
            "type": "string",
            "description": "Predicate name (e.g., 'follows', 'interested_in', 'mentioned')",
            "maxLength": 64
          },
          "args": {
            "type": "array",
            "description": "Arguments to the predicate. Use DIDs for account references, never handles.",
            "items": {
              "type": "string",
              "maxLength": 1024
            },
            "maxLength": 10
          },
          "confidence": {
            "type": "string",
            "description": "Confidence level as decimal string (e.g., '0.7'). Range 0.0-1.0, default 1.0.",
            "maxLength": 10
          },
          "source": {
            "type": "string",
            "description": "AT URI of source record (optional)",
            "format": "at-uri"
          },
          "supersedes": {
            "type": "string",
            "description": "AT URI of fact this supersedes (for updates)",
            "format": "at-uri"
          },
          "tags": {
            "type": "array",
            "description": "Tags for categorization",
            "items": {
              "type": "string",
              "maxLength": 64
            },
            "maxLength": 20
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "When this fact was created"
          }
        }
      }
    }
  }
}
